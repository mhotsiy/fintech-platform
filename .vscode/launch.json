    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/api/bin/Debug/net8.0/FintechPlatform.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Debug Workers",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/FintechPlatform.Workers/bin/Debug/net8.0/FintechPlatform.Workers.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/FintechPlatform.Workers",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "internalConsole"
        }
    ]
}
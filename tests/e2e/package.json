{
  "name": "fintech-platform-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for FintechPlatform using Playwright",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report test-results/html-report",
    "install": "playwright install chromium"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "fintech"
  ],
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "typescript": "^5.7.2"
  }
}
